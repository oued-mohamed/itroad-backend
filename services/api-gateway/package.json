{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Adherant Platform microservices",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
